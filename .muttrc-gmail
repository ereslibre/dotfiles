source ~/.muttrc-init

# == IMAP ==
set folder = ~/.mail/gmail
set record = "+[Gmail]/Sent Mail"
mailboxes `find ~/.mail/gmail -type d -name cur -printf '"%h"\n' | sort -d | tr '\n' ' '`

# == SMTP ==
set smtp_url = "smtp://ereslibre@smtp.gmail.com:587/"
set smtp_pass = `gpg2 -dq ~/.offlineimappass-gmail.gpg | tr -d '\n'`

# ==  Composition ==
set from = "ereslibre@gmail.com"
alternates "ereslibre@kde.org|ereslibre@fsfe.org|ereslibre@freedesktop.org"

# == Others ==
set header_cache = ~/.mutt/cache

source ~/.muttrc-generic
